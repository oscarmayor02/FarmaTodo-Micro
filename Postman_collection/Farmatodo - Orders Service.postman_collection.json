		{
			"name": "Create Order (with tokenCard)",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"if (!pm.collectionVariables.get('customer_id')) throw new Error('Falta customer_id');",
							"if (!pm.collectionVariables.get('product_id')) throw new Error('Falta product_id');",
							"// token_card puede estar vacío si vas a usar la otra variante con card"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('201/200', () => [200,201].includes(pm.response.code));",
							"const json = pm.response.json();",
							"pm.collectionVariables.set('order_id', String(json.orderId));",
							"pm.test('orderId seteado', () => !!pm.collectionVariables.get('order_id'));",
							"pm.test('status válido', () => ['CREATED','PAID','FAILED'].includes(json.status));"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "X-API-KEY",
						"value": "{{orders_api_key}}"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"customerId\": {{customer_id}},\n  \"address\": \"Calle 123 #45-67, Bogotá\",\n  \"tokenCard\": \"{{token_card}}\",\n  \"items\": [\n    { \"productId\": {{product_id}}, \"qty\": 2 }\n  ],\n  \"customerEmail\": \"{{customer_email}}\"\n}"
				},
				"url": {
					"raw": "{{orders_base}}/api/v1/orders",
					"host": [
						"{{orders_base}}"
					],
					"path": [
						"api",
						"v1",
						"orders"
					]
				}
			},
			"response": []
		},
